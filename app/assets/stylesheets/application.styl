/* footer======================================================== */
.footer
	text-align: left
	padding-top: 40px
	padding-bottom: 30px
	margin-top: 100px
	color: #777
	border-top: 1px solid #e5e5e5

	.social
		text-align: left
		margin-top: 20px
		margin-bottom: 20px

		.social-buttons
			display: inline-block
			margin-bottom: 0
